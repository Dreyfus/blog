<div id="box">
<h1 id="top">Witaj na moim blogu</h1>
<div id="newses">
<div class="news">
<h2 id="naglowek">
<%= @post.title %>
</h2>

  <p><%= @post.text %></p>

  <div id="komentarze">
  <h3>Komentarze</h3>
  <% @post.comments.each do |comment| %>
    <p id="ago"><%= time_ago_in_words comment.created_at %> temu</p>
  <p><%= comment.text %></p>
  <p id="del"><%= link_to "Usun komentarz", [@post, comment], :method => :delete, :confirm => "Jestes pewien?" %></p>
  <% end %>
  
  <%= form_for [@post, @post.comments.build] do |f| %>
  <p><%= f.text_area :text, :size => '40x10' %></p>
  <p><%= f.submit "Wyslij komentarz" %></p>
  <% end %>
 </div>
 </div>  
 </div>
 <div id="nav">
<p id="new">
 
<%= link_to 'Powrot', posts_path %>

<%= link_to 'Edycja', edit_post_path(@post) %> 

<%= link_to 'Usun', @post, :method => :delete, :confirm => "Czy jestes pewien?" %> 

</p>
</div>
 
 
</div>